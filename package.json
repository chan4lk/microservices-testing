{
  "name": "microservices-testing",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "env-cmd -f ./.env npx nx run-many --parallel --target=serve --projects=employee-management,auth-api",
    "build": "env-cmd -f ./.env.prod npx nx run-many --parallel --target=build --projects=employee-management,auth-api",
    "build:emp": "env-cmd -f ./.env.prod npx nx run employee-management:build",
    "build:api": "env-cmd -f ./.env.prod npx nx run auth-api:build",
    "run-api": "env-cmd -f ./.env.prod node dist/apps/auth-api/main.js",
    "run-emp": "env-cmd -f ./.env.prod node dist/apps/employee-management/main.js",
    "start:all": "concurrently npm:run-*"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/microservices": "^9.3.8",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.2.1",
    "axios": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@nrwl/eslint-plugin-nx": "15.6.3",
    "@nrwl/jest": "15.6.3",
    "@nrwl/linter": "15.6.3",
    "@nrwl/nest": "15.6.3",
    "@nrwl/node": "15.6.3",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/webpack": "15.6.3",
    "@nrwl/workspace": "15.6.3",
    "@types/jest": "28.1.1",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "concurrently": "^7.6.0",
    "env-cmd": "^10.1.0",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "nx": "15.6.3",
    "prettier": "^2.6.2",
    "ts-jest": "28.0.5",
    "ts-node": "10.9.1",
    "typescript": "~4.8.2"
  }
}
